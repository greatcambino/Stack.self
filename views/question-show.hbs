{{#if question}}
<div class="show-topic">[Topic: {{question.topic}}]</div><br>
<div class="show-question">"{{question.content}}"</div>
{{else}}
<h2>That question couldn't be found!</h2>
{{/if}}

<div class="container3">
<div class="card">
<div class="card-content">
<h3>Edit this question</h3>
<form action="/question/{{question._id}}?_method=put" method="post">
    <input type="text" name="question[content]" value="{{question.content}}">
    <input type="text" name="question[topic]" value="{{question.topic}}">
    <input type="submit" value="Update">
</form>
</div>
</div>
</div>

<div class="container4">
<div class="card">
<div class="card-content">
<h3>Delete this question</h3>
<form action="/question/{{question._id}}?_method=delete" method="post">
    <button type="submit">Delete</button>
</form>
</div>
</div>
</div>